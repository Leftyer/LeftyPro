@page
@model Admin.LeftyPro.Pages.Areas.SystemModules.AccountPlugin.Login.LoginIndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "/Pages/Shared/_LayoutMain.cshtml";
}
@section css{
    <style>
        body {
            font-family: "Helvetica Neue",Helvetica,Tahoma,Arial,"Microsoft Yahei","Hiragino Sans GB","WenQuanYi Micro Hei",sans-serif;
            margin: 0;
            height: 100%;
            background-size: 85%;
            background-image: url(/images/login.jpg);
            overflow-x: hidden;
            overflow-y: hidden;
        }

        .main {
            background: rgba(0, 0, 0, 0.4);
            position: absolute;
            margin: 0;
            z-index: 999;
            height: 100%;
            width: 100%;
        }

            .main .log-left {
                color: #ffffff;
                float: left;
                width: 60%;
                height: auto;
            }


                .main .log-left .log-left-title {
                    margin-top: 15%;
                    margin-left: 100px;
                    width: 100%;
                    height: auto;
                }

                    .main .log-left .log-left-title p {
                        font-size: 50px;
                    }

                        .main .log-left .log-left-title p i {
                            font-size: 80px;
                            color: #1E9FFF;
                        }

                .main .log-left .log-left-content {
                    margin-top: 20px;
                    margin-left: 100px;
                    width: 100%;
                    height: 100%;
                }

                    .main .log-left .log-left-content p {
                        font-size: 22px;
                        margin-left: 95px;
                    }

                    .main .log-left .log-left-content ul {
                        font-size: 18px;
                        margin-top: 20px;
                        line-height: 35px;
                    }

                    .main .log-left .log-left-content .log-left-btn {
                        margin-top: 10px;
                    }

            .main .log-right {
                background-color: #fff;
                float: right;
                min-width: 406px;
                height: 100%;
            }

                .main .log-right .log-right-title {
                    margin-top: 60%;
                    text-align: center;
                }

                    .main .log-right .log-right-title p {
                        font-size: 18px;
                        line-height: 40px;
                        color: #b2b0b0;
                    }

                        .main .log-right .log-right-title p:first-child {
                            font-size: 22px;
                            color: #2e2d2d;
                        }

                .main .log-right .log-right-content {
                    width: 100%;
                    line-height: 30px;
                    margin-top: 3em;
                }

                    .main .log-right .log-right-content .content-input {
                        margin-left: 85px;
                        margin-right: 85px;
                    }

                    .main .log-right .log-right-content .layui-input {
                        border: 1px solid #5FB878;
                    }

                    .main .log-right .log-right-content .content-button button {
                        width: 47%;
                    }

                    .main .log-right .log-right-content .content-button input {
                        width: 47%;
                    }



                    .main .log-right .log-right-content .versym {
                        display: none;
                        position: absolute;
                        margin-top: -32px;
                        margin-left: 218px;
                    }

                        .main .log-right .log-right-content .versym i {
                            font-weight: bold;
                            font-size: 16px;
                            color: #FF5722;
                        }
    </style>
}
<div class="main">
    <div class="log-left">
        <div class="log-left-title">
            <p><i class="layui-icon">&#xe62c;</i>@(BaseCore.Instance.SystemName)管理系统</p>
        </div>
        <div class="log-left-content">
            <p>微小看品质，领域创未来！——Leftyer</p>
            <ul>
                <li><i class="layui-icon">&#xe605;</i>本系统实现跨平台部署。</li>
                <li><i class="layui-icon">&#xe605;</i>本系统使用LayUI为前端框架。</li>
                <li><i class="layui-icon">&#xe605;</i>本系统数据库选择的是SQLServer2019。</li>
                <li><i class="layui-icon">&#xe605;</i>本系统部署环境采用Linux+Docker容器+Nginx。</li>
                <li><i class="layui-icon">&#xe605;</i>本系统开发环境是(VSCode|VS2019)+Asp.netCore。</li>
                <li><i class="layui-icon">&#xe605;</i>本系统服务端使用DDD(领域式驱动设计)+SqlSugar+Redis。</li>
            </ul>
            <div class="log-left-btn">
                <a href="javascript:void(0);" id="backOfficial" class="layui-btn layui-btn-normal"><i class="layui-icon">&#xe62e;</i>返回官网</a>
                <a href="javascript:void(0);" id="contactUs" class="layui-btn layui-btn-normal">
                    <i class="layui-icon">&#xe606;</i>联系我们
                </a>
                <a href="javascript:void(0);" id="productInfo" class="layui-btn layui-btn-normal">
                    <i class="layui-icon">&#xe612;</i>产品介绍
                </a>
            </div>

        </div>

    </div>
    <div class="log-right">
        <div class="log-right-title">
            <p>@(BaseCore.Instance.SystemName)管理系统</p>
            <p>欢迎使用</p>
        </div>
        <div class="log-right-content">
            <form class="layui-form" lay-filter="login">
                <div class="layui-form-item">
                    <div class="layui-input-block content-input">
                        <input type="text" name="UserName" id="UserName" placeholder="请输入账户名" class="layui-input"
                               lay-verify="required"><span class="versym"><i class="layui-icon">&#x1006;</i></span>

                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block content-input">
                        <input type="password" name="UserPwd" id="UserPwd" placeholder="请输入密码" autocomplete="off"
                               class="layui-input" lay-verify="required"><span class="versym">
                            <i class="layui-icon">&#x1006;</i>
                        </span>
                    </div>
                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block content-input content-button">
                        <button class="layui-btn" lay-submit lay-filter="sub" id="btn_sub">立即登录</button>
                        <button class="layui-btn layui-btn-primary" id="btn_reg">找回密码</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section js{
    <script>
        var $ = layui.$, layer = layui.layer, form = layui.form;
        var Instance = (function (instance) {
            instance.Configs = (function (config) {
                return config;
            })({});

            instance.Managers = (function (manager) {

                manager.SignLogin = function () {
                    form.on("submit(sub)", function (data) {
                        Utilitys.Methods.BtnDisabled("#btn_sub", 1);
                        $.post("LoginIndex?handler=Login", data.field, function (result) {
                            layer.msg(result.msg, { icon: 1 }, function () {
                                Utilitys.Methods.BtnDisabled("#btn_sub", 0);
                                if (result.code === 0) {
                                    window.location.href = "/";
                                }
                            });
                        }, 'json');

                        return false;
                    });
                };

                manager.ClickLoad = function () {
                    var msg = "加班开发中……";

                    $("#btn_reg").click(function () {
                        layer.msg(msg, {
                            icon: 5
                        });
                    });

                    $("#backOfficial").click(function () {
                        layer.msg(msg, {
                            icon: 5
                        });
                    });

                    $("#contactUs").click(function () {
                        layer.msg(msg, {
                            icon: 5
                        });
                    });

                    $("#productInfo").click(function () {
                        layer.msg(msg, {
                            icon: 5
                        });
                    });

                };

                manager.Load = function () {
                    manager.SignLogin();
                    manager.ClickLoad();
                };

                return manager;
            })({});

            instance.Init = function () {
                instance.Managers.Load();
            };


            return instance;
        })({});

        $(function () {
            Instance.Init();
        });
    </script>
}